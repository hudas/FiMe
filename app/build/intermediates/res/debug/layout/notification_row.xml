<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowHeader"
        android:textSize="30dp"
        android:text="HEADER"
        android:layout_marginTop="5dp"
        android:textColor="@color/purple"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple"
        android:id="@+id/userName"
        android:textSize="20dp"
        android:layout_below="@+id/notificationImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp" />


    <ImageView
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/notificationImageView"
        android:layout_alignTop="@+id/rowHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/deleteNotificationButton"
        android:layout_alignTop="@+id/rowHeader"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_action_delete"
        android:layout_alignBottom="@+id/rowHeader" />



</RelativeLayout><!-- From: file:/D:/Android/App/FiMe/app/src/main/res/layout/notification_row.xml -->